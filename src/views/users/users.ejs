
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Users</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link href="/css/estilos.css" rel="stylesheet" type="text/css" />
  </head>
  <header>
    <%- include('../partials/encabezado') -%>
  </header>
  <body>
    <div class="row"></div>
    <div class="container">
      <div class="row">
        <div class="col-12">&nbsp;</div>
      </div>
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <a href="/admin/users/create">
            <div class="card" style="width: 15rem">
              <img
                src="https://cdn.pixabay.com/photo/2017/08/16/00/29/add-person-2646097_1280.png"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"></h5>
                <a class="btn btn-primary" href="/admin/users/create">Add user</a>
              </div>
            </div>
          </a>
          <% users.forEach(user => { %>
            <div class="card" style="width: 15.1rem">
              <img
                src="https://img.freepik.com/psd-premium/mockup-camiseta-deportiva-logotipo_23-2148126782.jpg?w=826"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= user.name %></h5>
                <p class="card-text"><%= user .description%></p>
                  <hr />
                <a class="btn btn-primary" href="/admin/users/<%= user.id %>">Show</a>
                <a class="btn btn-success" href="/admin/users/edit/<%= user.id %>">Edit</a>
                <a class="btn btn-danger" href="/admin/users/destroy/<%= user.id %>">Remove</a>
              </div>
            </div>
            <% }); %>
        </div>
      </div>
    </div>
    

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
