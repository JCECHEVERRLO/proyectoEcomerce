<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Products</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link href="/css/estilos.css" rel="stylesheet" type="text/css" />
  </head>
  <header>
    <%- include('partials/encabezado') -%>
  </header>
  <body>
    <div class="row"></div>
    <div class="container">
      <div class="row">
        <div class="col-12">&nbsp;</div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <form action="/">
            <label for="name">Buscar</label>
            <input type="text" class="form-control" value="" name="name">
            <button type="submit" class="btn btn-primary form-control">Submit</button>
          </form>
        </div>
       
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <% products.forEach(product => { %>
            <div class="card" style="width: 15.1rem">
              <img
                src="https://img.freepik.com/psd-premium/mockup-camiseta-deportiva-logotipo_23-2148126782.jpg?w=826"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description%></p>
                  <hr />
                  
                <a class="btn btn-info" href="/?id=<%= product.id,product.name,product.category %>">Details</a>
                <form method="POST" action="/ShoppingCar">
                  <div class="mb-3">
                    <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" hidden>
                    <input type="number" class="form-control" id="quantity" name="quantity" value="1" hidden>
                    <input type="number" class="form-control" id="idUser" name="idUser" value="<%= userId %>" hidden>
                  </div>
                  <button type="submit" class="btn btn-primary">Add to car</button>
                </form>
              </div>
            </div>
            <% }); %>
        </div>
      </div>
    </div>
    

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html> 